<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:fhw="urn:import:de.fhwedel.om.widgets">
   <ui:style>
   
   </ui:style>   
      <g:AbsolutePanel height="150px" width="350px">
      
         <!-- Attribute (Artikelauswahl, Menge) -->

         <g:at top="0" left="20">
            <g:Label text="Artikel"/>
         </g:at>
         <g:at top="20" left="20">
            <fhw:BOSelectListBox pixelSize="200,20" visibleItemCount="1" ui:field="article"/>
         </g:at>
         
         <g:at top="0" left="240">
            <g:Label text="Menge"/>
         </g:at>         
         <g:at top="20" left="240">
            <g:IntegerBox pixelSize="100,20" ui:field="amount"/>
         </g:at>      
            
         <!-- Positionsbezogene Buttons (Speichern, Abbrechen) -->
         
         <g:at top="80" left="80">
            <g:Button pixelSize="100,50" ui:field="save_position">Position speichern</g:Button>
         </g:at>
         <g:at top="80" left="180">
            <g:Button pixelSize="100,50" ui:field="cancel">Abbruch</g:Button>
         </g:at>
         
      </g:AbsolutePanel>      
</ui:UiBinder> 