<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:fhw="urn:import:de.fhwedel.om.widgets">
   <ui:style>
   
   </ui:style>   
      <g:AbsolutePanel height="500px" width="1500px">   
         
         <!-- Suchen -->         
         <g:at top="0" left="20">
            <g:Label text="Kunden-Nr:"/>
         </g:at>
         <g:at top="0" left="100">
            <g:IntegerBox pixelSize="50,20" ui:field="search_cust_number"/>
         </g:at>
         
         <g:at top="40" left="20">
            <g:Label text="Name:"/>
         </g:at>
         <g:at top="40" left="100">
            <g:TextBox pixelSize="200,20" ui:field="search_sname"/>
         </g:at>

         <g:at top="80" left="20">
            <g:Label text="Vorname:"/>
         </g:at>
         <g:at top="80" left="100">
            <g:TextBox pixelSize="200,20" ui:field="search_pname"/>
         </g:at>
              
         <g:at top="120" left="100">
         	<g:Button pixelSize="100,50" ui:field="search_customer">Kunden suchen</g:Button>
         </g:at>
		 
		 <g:at top="200" left="20">
            <g:Label text="Auswahl:"/>
         </g:at>
		 <g:at top="200" left="100">
            <fhw:BOSelectListBox pixelSize="250,120" ui:field="customers"></fhw:BOSelectListBox>
         </g:at>
         <g:at top="330" left="100">
            <g:Button pixelSize="100,50" ui:field="select_customer">Kunde auswählen</g:Button>
         </g:at>
         
         
         <!-- Kundenübersicht (Name, Vorname, Alter) -->
         <g:at top="0" left="400">
            <g:Label text="Kunden-Nr:"/>
         </g:at>
         <g:at top="0" left="500">
            <g:IntegerBox pixelSize="50,20" ui:field="cust_number" readOnly="true" />
         </g:at>
         
         <g:at top="40" left="400">
            <g:Label text="Name:"/>
         </g:at>
         <g:at top="40" left="500">
            <g:TextBox pixelSize="200,20" ui:field="sname"/>
         </g:at>
         
         <g:at top="80" left="400">
            <g:Label text="Vorname:"/>
         </g:at>
         <g:at top="80" left="500">
            <g:TextBox pixelSize="200,20" ui:field="pname"/>
         </g:at>
         
         <g:at top="120" left="400">
            <g:Label text="Adresse:"/>
         </g:at>
         <g:at top="120" left="500">
            <g:TextBox pixelSize="200,20" ui:field="street"/>
         </g:at>      
		 <g:at top="160" left="500">
            <g:TextBox pixelSize="200,20" ui:field="postcode"/>
         </g:at>      
		 <g:at top="200" left="500">
            <g:TextBox pixelSize="200,20" ui:field="city"/>
         </g:at>
         
         <g:at top="240" left="500">
            <g:Button pixelSize="100,50" ui:field="new_customer">Neuer Kunde</g:Button>
         </g:at>
         <g:at top="240" left="610">
            <g:Button pixelSize="100,50" ui:field="save_customer">Kunde speichern</g:Button>
         </g:at>      

		<!-- Selbstauskunft -->
         <g:at top="0" left="800">
            <g:Label text="Selbstauskunft:"/>
         </g:at>
         
         <g:at top="0" left="900">
            <g:Button pixelSize="100,50" ui:field="new_selfDisclosure">Neue Selbstauskunft</g:Button>
         </g:at>

		<!-- Vertragsdaten -->         
         <g:at top="200" left="800">
            <g:Label text="Verträge:"/>
         </g:at>
		 <g:at top="200" left="900">
            <fhw:BOSelectListBox pixelSize="250,120" ui:field="creditContracts"></fhw:BOSelectListBox>
         </g:at>
         <g:at top="330" left="900">
            <g:Button pixelSize="100,50" ui:field="new_creditContract">Neuer Kreditvertrag</g:Button>
         </g:at>
         <g:at top="330" left="1010">
            <g:Button pixelSize="100,50" ui:field="edit_creditContract">Kreditvertrag bearbeiten</g:Button>
         </g:at>  
				
      </g:AbsolutePanel>      
</ui:UiBinder> 